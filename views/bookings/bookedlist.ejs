    }

    .date-label {
        font-size: 12px;
        color: #666;
        text-transform: uppercase;
        margin-bottom: 4px;
    }

    .status-ongoing {
        background-color: #e3f2fd;
        color: #1976d2;
    }

    .date-value {
        font-size: 10px;
        font-weight: 400;
        color: #333;
    }

    .booking-details {
        margin-bottom: 16px;
    }

    .booking-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 5px;
        /* border-top: 1px solid #e1e1e1; */
