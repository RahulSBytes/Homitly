<style>
    .container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        max-width: 640px;
        justify-content: center;
        gap: 2rem;
        margin: 0 auto;
    }

    .page-title {
        font-size: 24px;
        margin-bottom: 30px;
        color: #333;
    }

    .booking-card {
        display: flex;
        justify-content: space-between;
        border: 1px solid #e1e1e1;
        width: 100%;
        border-radius: 8px;
        margin-bottom: 24px;
        overflow: hidden;
        box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
        transition: box-shadow 0.2s ease;
    }

    .booking-card:hover {
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .card-image {
        height: 100%;
        width: 50%;
        object-fit: cover;
    }

    .pack {
        flex: 1;
        padding: 14px 12px;
        width: 50%;
    }


    .card-content {
        display: flex;
    }

    .booking-header {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 5px;
        gap: 16px;
    }

    .booking-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .property-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 4px;
        text-transform: capitalize;
    }

    .property-type {
        color: #666;
        font-size: 14px;
        margin-bottom: 8px;
    }

    .booking-status {
        padding: 4px 12px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 500;
        text-transform: uppercase;
    }

    .status-upcoming {
        background-color: #fff8e1;
        color: #e65100;
    }

    .status-completed {
        background-color: #e8f5e8;
        color: #2e7d32;
    }

    .status-cancelled {
        background-color: #ffebee;
        color: #c62828;
    }

    .booking-dates {
        display: grid;
        grid-template-columns: 1fr 1fr;
        /* gap: 16px; */
        width: 100%;
        margin-bottom: 15px;
        padding: 3px 0px;
        background-color: #f7f7f7;
        /* border-radius: 8px; */
        border: 1px solid #e1e1e1;
    }

    .date-section {
        text-align: center;
    }

    .date-label {
        font-size: 12px;
        color: #666;
        text-transform: uppercase;
        margin-bottom: 4px;
    }

    .status-ongoing {
        background-color: #e3f2fd;
        color: #1976d2;
    }

    .date-value {
        font-size: 10px;
        font-weight: 400;
        color: #333;
    }

    .booking-details {
        margin-bottom: 16px;
    }

    .booking-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 5px;
        font-size: 12px;
        color: #717171;
    }

    .total-price {
        font-size: 13px;
        font-weight: 600;
        color: #313131;
        margin-top: 3px;
    }


    .btn {
        padding: 4px 10px;
        border: 1px solid #dddddd;
        background: white;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        color: #222222;
        transition: all 0.2s ease;
    }

    .btn:hover {
        background-color: #f7f7f7;
        border-color: #b0b0b0;
    }

    .btn-primary {
        background-color: #ff385c;
        color: white;
        border-color: #ff385c;
    }

    .btn-primary:hover {
        background-color: #e31c5f;
        border-color: #e31c5f;
    }


    @media (max-width: 770px) {
        main {
            padding: 0;
        }
    }


    @media (max-width: 670px) {
        .booking-header {
            flex-direction: column;
        }
        
        .card-content {
            display: flex;
            flex-direction: column;
        }

        .pack {
            width: 100%;
        }

        .booking-info {
            margin-top: 0.8rem;
        }

        .card-image {
            width: 100%;
        }

        .booking-dates {
            display: flex;
            justify-content: space-around;
        }

        .booking-dates {
            grid-template-columns: 1fr;
        }

        .booking-details {
            grid-template-columns: 1fr 1fr;
        }
    }



    div.no-item {
        display: flex;
        width: 100%;
        height: 100%;
        justify-content: center;
    }

    p.no-item {
        font-size: 1.5rem;
        font-weight: 600;
        color: #484848;
    }


    /* @@@@@@@@@@@@@@@@@@@ */

    .empty-state-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        min-height: 260px;
        padding: 2.5rem 1rem;
        text-align: center;
        margin: 1rem 0;
    }

    .empty-state-icon {
        font-size: 3rem;
        color: #dddddd;
        margin-bottom: 1.25rem;
    }

    .empty-state-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #222222;
        margin-bottom: 0.5rem;
    }

    .empty-state-message {
        font-size: 1rem;
        color: #717171;
        max-width: 450px;
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }

    .empty-state-button {
        background-color: #FF385C;
        color: white;
        font-size: 0.95rem;
        font-weight: 500;
        padding: 0.7rem 1.4rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

    .empty-state-button:hover {
        background-color: #E31C5F;
        transform: translateY(-2px);
    }

    @media (max-width: 640px) {
        .empty-state-container {
            min-height: 200px;
            padding: 2rem 1rem;
        }

        .empty-state-icon {
            font-size: 2.5rem;
        }

        .empty-state-title {
            font-size: 1.25rem;
        }
    }
</style>

<section class="bookinglist">

    <div class="container">

        <% if(bookings.length===0){ %>

            <div class="empty-state-container">
                <i class="fa-solid fa-calendar-xmark empty-state-icon"></i>
                <h3 class="empty-state-title">No bookings yet</h3>
                <p class="empty-state-message">You haven't made any bookings yet. Start planning your next getaway!</p>
                <a href="/listing" class="empty-state-button">
                    Find places to stay
                </a>
            </div>

            <% }else{ %>
                <h1 class=".page-title">Your Bookings</h1>
                <% for(let item of bookings){ %>

                    <div class="booking-card">
                        <div class="card-content">
                            <img class="card-image" src="<%= item.listingid.photos.path%>"
                                alt="<%= item.listingid.photos.filename %>">

                            <div class="pack">
                                <div class="booking-header">
                                    <div class="booking-info">
                                        <h3 class="property-title">
                                            <%= item.listingid.title %>
                                        </h3>
                                        <span class="booking-status <%= item.statusClass %>">
                                            <%= item.status %>
                                        </span>
                                    </div>
                                    <p class="property-type">
                                        <%= item.listingid.propertyType %> &nbsp; • &nbsp; <%= item.listingid.roomType
                                                %>
                                    </p>
                                </div>

                                <div class="booking-dates">
                                    <div class="date-section">
                                        <div class="date-label">Check-in</div>
                                        <div class="date-value">
                                            <%= item.checkin %>
                                        </div>
                                    </div>
                                    <div class="date-section">
                                        <div class="date-label">Check-out</div>
                                        <div class="date-value">
                                            <%= item.checkout %>
                                        </div>
                                    </div>
                                </div>



                                <div class="booking-footer">
                                    <div>
                                        <div>Booking ID: #<%= item._id %>
                                        </div>
                                        <div>Booked on: <%= item.bookedOn %>
                                        </div>
                                        <div class="total-price">₹<%= item.payableAmount%> total</div>
                                    </div>
                                </div>

                                <div class="action-buttons" style="margin-top: 16px; justify-content: flex-end;">
                                    <a class="btn btn-primary" href="/listing/<%= item.listingid._id %>"
                                        class="btn">View
                                        Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <%} %>

    </div>

</section>