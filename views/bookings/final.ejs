        .confirmation-container {
            max-width: 600px;
            width: 100%;
            margin: 20px auto;
            text-align: center;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #00d4aa 0%, #00b894 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            animation: scaleIn 0.5s ease-out;
        }

        .success-icon::after {
            content: '✓';
            color: white;
            font-size: 40px;
            font-weight: bold;
        }

        @keyframes scaleIn {
            0% { transform: scale(0); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .success-title {
            font-size: 32px;
            font-weight: 700;
            color: #222222;
            margin-bottom: 10px;
            animation: fadeInUp 0.6s ease-out 0.2s both;
        }

        .success-subtitle {
            font-size: 18px;
            color: #717171;
            margin-bottom: 40px;
            animation: fadeInUp 0.6s ease-out 0.4s both;
        }

        @keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        .booking-card {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
            border: 1px solid #ebebeb;
            animation: fadeInUp 0.6s ease-out 0.6s both;
            margin-bottom: 30px;
        }

        .booking-id {
            background: #f7f7f7;
            color: #222222;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 20px;
            border: 1px solid #ebebeb;
        }

        .property-info {
            margin-bottom: 25px;
        }

        .property-name {
            font-size: 24px;
            font-weight: 600;
            color: #222222;
            margin-bottom: 5px;
        }

        .property-address {
            color: #717171;
            font-size: 16px;
        }

        .stay-summary {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 25px;
            padding: 20px;
            background: #f7f7f7;
            border-radius: 12px;
            border: 1px solid #ebebeb;
        }

        .stay-item {
            text-align: center;
        }

        .stay-label {
            font-size: 14px;
            color: #717171;
            margin-bottom: 5px;
        }

        .stay-value {
            font-size: 18px;
            font-weight: 600;
            color: #222222;
        }

        .total-amount {
            background: linear-gradient(135deg, #FF5A5F 0%, #ff385c 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
        }

        .total-label {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 5px;
        }

        .total-value {
            font-size: 28px;
            font-weight: 700;
        }

        .host-info {
            background: #fff8e5;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            border-left: 4px solid #ffd60a;
        }

        .host-title {
            font-size: 16px;
            font-weight: 600;
            color: #222222;
            margin-bottom: 10px;
        }

        .host-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .host-item {
            font-size: 14px;
        }

        .host-label {
            color: #717171;
            margin-bottom: 2px;
        }

        .host-value {
            color: #222222;
            font-weight: 500;
        }

        .next-steps {
            text-align: left;
            background: #f0f9ff;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid #0ea5e9;
        }

        .next-steps-title {
            font-size: 16px;
            font-weight: 600;
            color: #222222;
            margin-bottom: 10px;
        }

        .next-steps-list {
            list-style: none;
            padding: 0;
        }

        .next-steps-list li {
            color: #717171;
            font-size: 14px;
            margin-bottom: 8px;
            padding-left: 20px;
            position: relative;
        }

        .next-steps-list li::before {
            content: '•';
            color: #0ea5e9;
            position: absolute;
            left: 0;
            font-weight: bold;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            animation: fadeInUp 0.6s ease-out 0.8s both;
        }

        .btn {
            padding: 14px 28px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #FF5A5F 0%, #ff385c 100%);
            color: white;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff385c 0%, #e31c23 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 90, 95, 0.3);
        }

        .btn-secondary {
            background: white;
            color: #222222;
            border: 2px solid #dddddd;
        }

        .btn-secondary:hover {
            background: #f7f7f7;
            border-color: #bbbbbb;
        }

        @media (max-width: 768px) {
            .confirmation-container {
                margin: 15px;
            }

            .booking-card {
                padding: 20px;
            }

            .stay-summary {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .host-details {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .success-title {
                font-size: 28px;
            }
        }
    </style>

    <div class="confirmation-container">
        <!-- Success Icon and Title -->
        <div class="success-icon"></div>
        <h1 class="success-title">Booking Confirmed!</h1>
        <p class="success-subtitle">Your reservation has been successfully confirmed</p>

        <!-- Booking Details Card -->
        <div class="booking-card">
            <div class="booking-id">Booking ID: <%= data._doc._id %></div>
            
            <div class="property-info">
                <div class="property-name"><%= data.listingid.title %></div>
                <div class="property-address"><%= data.listingid.address %> </div>
            </div>

            <div class="stay-summary">
                <div class="stay-item">
                    <div class="stay-label">Check-in</div>
                    <div class="stay-value"><%= time.checkin %></div>
                </div>
                <div class="stay-item">
                    <div class="stay-label">Check-out</div>
                    <div class="stay-value"><%= time.checkout%></div>
                </div>
                <div class="stay-item">
                    <div class="stay-label">Guests</div>
                    <div class="stay-value"><%=  data.numberOfGuests %> People</div>
                </div>
                <div class="stay-item">
                    <div class="stay-label">Duration</div>
                    <div class="stay-value"><%= data.numberOfDays %> Nights</div>
                </div>
            </div>

            <div class="total-amount">
                <div class="total-label">Total Amount Paid</div>
                <div class="total-value"><%= data.payableAmount %> INR</div>
            </div>

            <div class="host-info">
                <div class="host-title">Your Host</div>
                <div class="host-details">
                    <div class="host-item">
                        <div class="host-label">Name</div>
                        <div class="host-value"><%= data.listingid.host.username %></div>
                    </div>
                    <div class="host-item">
                        <div class="host-label">Email</div>
                        <div class="host-value"><%= data.listingid.host.email %></div>
                    </div>
                </div>
            </div>

            <div class="next-steps">
                <div class="next-steps-title">What's Next?</div>
                <ul class="next-steps-list">
                    <li>You'll receive a confirmation email within 5 minutes</li>
                    <li>Your host will contact you 24 hours before check-in</li>
                    <li>Check-in details will be shared via SMS</li>
                    <li>Save your booking ID for future reference</li>
                </ul>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a class="btn btn-secondary" href="/bookings">View All Bookings</a>
            <a class="btn btn-primary" href="/listing">Back to Home</a>
        </div>
    </div>
