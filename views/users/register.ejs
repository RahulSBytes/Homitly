<style>

  .register {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    padding: 20px;
  }
  

  .new-listing {
    width: 100%;
    max-width: 420px;
    padding: 32px;
    border-radius: 12px;
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
    background-color: white;
    transition: transform 0.3s ease;
  }
  
  .new-listing:hover {
    transform: translateY(-3px);
  }
  

  .form-title {
    font-size: 24px;
    font-weight: 600;
    color: #222222;
    margin: 0 0 28px 0;
    text-align: center;
  }
  

  .new-listing label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #484848;
    margin-top: 1rem;
    margin-bottom: 8px;
  }
  
  
  .new-listing input:not([type="file"]) {
    width: 100%;
    padding: 10px 16px;
    font-size: 16px;
    border: 1px solid #DDDDDD;
    border-radius: 8px;
    margin-bottom: 28px;
    transition: all 0.3s ease;
    height: 40px;
  }
  
  .new-listing input:not([type="file"]):focus {
    border-color: #FF385C;
    box-shadow: 0 0 0 2px rgba(255, 56, 92, 0.2);
    outline: none;
  }
  

  .file-input-container {
    position: relative;
    width: 100%;
  }
  
  .file-input-button {
    display: block;
    width: 100%;
    padding: 10px 16px;
    background-color: #F7F7F7;
    border: 1px dashed #DDDDDD;
    border-radius: 8px;
    text-align: center;
    color: #484848;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    height: 40px;
    line-height: 20px;
  }
  
  .file-input-button:hover {
    background-color: #EBEBEB;
    border-color: #BBBBBB;
  }
  
  .new-listing input[type="file"] {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }
  
  .file-name {
    margin-top: 8px;
    font-size: 12px;
    color: #717171;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  
  .new-listing button {
    width: 100%;
    padding: 12px 16px;
    background-color: #FF385C;
    color: white;
    font-size: 16px;
    font-weight: 500;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    margin-top: 1.2rem;
    height: 44px;
  }
  
  .new-listing button:hover {
    background-color: #E31C5F;
    transform: translateY(-2px);
  }
  
  .new-listing button:active {
    transform: translateY(0);
  }
  
  .form-divider {
    display: flex;
    align-items: center;
    margin: 24px 0;
  }
  
  .form-divider::before,
  .form-divider::after {
    content: "";
    flex: 1;
    height: 1px;
    background-color: #DDDDDD;
  }
  
  .form-divider span {
    padding: 0 16px;
    color: #717171;
    font-size: 14px;
  }
  
  @media (max-width: 480px) {
    .new-listing {
      padding: 24px 16px;
    }
    
    .form-title {
      font-size: 20px;
      margin-bottom: 20px;
    }
  }
</style>

<div class="register">
    <form class="new-listing" action="/user" method="post" enctype="multipart/form-data">
        <h2 class="form-title">Create an account</h2>
        
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Choose a username" required>
        
        <label for="avatar">Profile photo</label>
        <div class="file-input-container">
            <div class="file-input-button">Choose a profile photo</div>
            <input type="file" name="avatar" id="avatar" accept="image/*">
            <div class="file-name"></div>
        </div>
        
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email address" required>
        
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Create a password" required>
        
        <button type="submit">Sign up</button>
        
        <div class="form-divider">
            <span>or</span>
        </div>
        
        <p style="text-align: center; margin-top: 16px; font-size: 14px; color: #717171;">
            Already have an account? <a href="/user/login" style="color: #FF385C; text-decoration: none; font-weight: 500;">Log in</a>
        </p>
    </form>
</div>

<script>
    document.getElementById('avatar').addEventListener('change', function() {
        const fileName = this.files[0] ? this.files[0].name : 'No file selected';
        document.querySelector('.file-name').textContent = fileName;
    });
</script>