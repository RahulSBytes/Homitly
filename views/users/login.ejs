<style>

  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    padding: 20px;
  }
  
  .new-listing {
    width: 100%;
    max-width: 420px;
    padding: 32px;
    border-radius: 12px;
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
    background-color: white;
    transition: transform 0.3s ease;
  }
  
  .new-listing:hover {
    transform: translateY(-3px);
  }
  
  .form-title {
    font-size: 24px;
    font-weight: 600;
    color: #222222;
    margin: 0 0 28px 0;
    text-align: center;
  }
  

  .new-listing label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #484848;
    margin-bottom: 8px;
    margin-top: 0.8rem;
  }
  
  .new-listing input {
    width: 100%;
    padding: 10px 16px; 
    font-size: 16px;
    border: 1px solid #DDDDDD;
    border-radius: 8px;
    transition: all 0.3s ease;
    height: 40px; 
  }
  
  .new-listing input:focus {
    border-color: #FF385C;
    box-shadow: 0 0 0 2px rgba(255, 56, 92, 0.2);
    outline: none;
  }
  

  .new-listing button {
    width: 100%;
    padding: 12px 16px; 
    background-color: #FF385C;
    color: white;
    font-size: 16px;
    font-weight: 500;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    margin-top: 1.1rem;
    height: 44px; 
  }
  
  .new-listing button:hover {
    background-color: #E31C5F;
    transform: translateY(-2px);
  }
  
  .new-listing button:active {
    transform: translateY(0);
  }
  
  .form-divider {
    display: flex;
    align-items: center;
    margin: 24px 0;
  }
  
  .form-divider::before,
  .form-divider::after {
    content: "";
    flex: 1;
    height: 1px;
    background-color: #DDDDDD;
  }
  
  .form-divider span {
    padding: 0 16px;
    color: #717171;
    font-size: 14px;
  }
  
  @media (max-width: 480px) {
    .new-listing {
      padding: 24px 16px;
    }
    
    .form-title {
      font-size: 20px;
      margin-bottom: 20px;
    }
  }
</style>

<div class="login-container">
    <form class="new-listing" action="/user/login" method="post">
        <h2 class="form-title">Log in to Homitly</h2>
        
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Enter your username" required>
        
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>
        
        <button type="submit">Log in</button>
        
        <div class="form-divider">
            <span>or</span>
        </div>
        
        <p style="text-align: center; margin-top: 16px; font-size: 14px; color: #717171;">
            Don't have an account? <a href="/user" style="color: #FF385C; text-decoration: none; font-weight: 500;">Sign up</a>
        </p>
    </form>
</div>