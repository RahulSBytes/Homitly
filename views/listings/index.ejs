<style>
    .box {
  /* border: 2px solid red; */
  height: 14rem;
  flex: 1 1 12rem;
  text-decoration: none;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 1px 2px 0px;
  max-width: 14rem;
  min-width: 7rem;
}

section {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 1.3rem 1rem;
  justify-content: flex-start;
}

.listing-img {
  width: 100%;
  height: 75%;
  object-fit: cover;
  border-radius: 19px;
}

.text {
  color: #222;
  font-weight: 400;
  padding-inline: 8px;
  font-weight:600;
}

.price-text {
  color: #5e5e5e;
  font-weight: 600;
  padding-top: 3px;
  font-size: 0.8rem;
}


</style>

<section>
    <% for(let item of data){ %>
        <a class="box" href="listing/<%=item._id %>">
            <img class="listing-img" src="<%= item.photos.path %>" alt="item.photos.filename">
            <div class="text">
                <p>
                    <%= item.title %>
                </p>
                <p class="price-text">&#8377;<%= item.pricePerNight %> per night&nbsp; &bull; &nbsp; &#9733; <%= avgrating%></p>
            </div>
        </a>
        <% } %>
</section>